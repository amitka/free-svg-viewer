{
  "name": "free-svg-viewer",
  "description": "UI for viewing and selecting .svg graphic files",
  "version": "0.1.0",
  "author": {
    "name": "Amit Kaplinsky",
    "email": "amitka111@gmail.com",
    "url": "https://my-website.com"
  },
  "private": true,
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "yarn react-build && yarn electron-build",
    "postinstall": "electron-builder install-app-deps",
    "electron-build": "electron-builder",
    "electron-pack": "build --em.main=build/electron.js",
    "preelectron-pack": "yarn build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "cross-env": "^6.0.3",
    "electron-is-dev": "^1.1.0",
    "node-sass": "^4.13.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "electron": "^15.5.5",
    "electron-builder": "^22.2.0",
    "typescript": "^3.7.5",
    "wait-on": "^3.3.0"
  },
  "build": {
    "appId": "com.my-website.my-app",
    "productName": "Free-svg-viewer",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.graphicDesign"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
